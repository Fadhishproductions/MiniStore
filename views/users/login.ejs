<%- include('partials/header')%>
 
  <div class="container m-5">
    <div class="row py-4">
    <div class="mid col-3 m-4 p-3 rounded mx-auto" style="background-color: #f4eff4;">
      <div class="row">
        <div class="col-sm-6 col-6 text-center"><label for="form" class="fw-bold text-dark">LOGIN</label>
          <div class="col-10 bg-secondary" style="width: 100%;height:0.2em;">.</div>
        </div>
          <div class="col-sm-6 col-6 text-center"><a href="/signup" class="fw-bold text-dark text-decoration-none">SIGNUP</a>
        </div>
      </div>
      <form action="/login" method="post" class="form-container mt-1" >
        <div class="form-group">
          <div class="text-warning"><%= data %></div>
        </div>
        <div class="form-group">
          <label for="Email">Email:</label>
          <input type="email" id="Email" name="email" required class="form-control" value=" " placeholder="Enter email" >
        </div>
        <div class="form-group">
          <label for="Password">Password:</label>
          <input type="password" id="Password" name="password" required class="form-control" value="" placeholder="Enter password" >
        </div>
    
       <a href="/forgotpassword">Fotgot password?</a>
        <div class="form-group text-center">
          <button type="submit" class="btn  mt-2">Login</button>
        </div>
        <!-- <div class="col-md-3 mt-2">
          <a href="/" class="btn btn-danger ">LOGIN</a>
        </div> -->
      </form>
    </div>
  </div></div>

  <!-- footer start -->
