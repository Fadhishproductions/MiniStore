  <div class="content">
    
    <div class="container">
        <form action="/editaddress?id=<%=address._id%>" id="editaddressForm" method="post" class=" rounded  form-container mt-1" style="border: 1px solid #c6c6c6;">
            <div class="container">
                 <H6 class="m-3  text-primary">EDIT ADDRESS</H6>
              <div class="row ">
                 <div class="form-group m-2  col-5">
                     <label for="Name">Name:</label>
                     <input type="text" id="Name" name="name" required class="form-control mt-2" placeholder="Enter your name" value="<%=address.name%>">
                 </div>
     
                 <div class="form-group m-2 col-5">
                     <label for="mobile">Mobile:</label>
                      <input type="text" id="mobile" name="mobile" required class="form-control mt-2" placeholder="Enter mobile number" value="<%=address.mobile%>">
                 </div>
     
                 <div class="form-group m-2  col-5">
                     <label for="pincode">Pincode:</label>
                      <input type="text" id="pincode" name="pincode" required class="form-control mt-2" placeholder="Enter your pincode" value="<%=address.pincode%>">
                 </div>
     
                 <div class="form-group m-2  col-5">
                     <label for="locality">Locality:</label>
                      <input type="text" id="locality" name="locality" required class="form-control mt-2" placeholder="Enter your locality" value="<%=address.locality%>">
                 </div>
     
                 <div class="form-group m-2  col-10">
                     <label for="address">Address(Area and Street):</label>
                     <textarea id="Address" name="address" class="form-control " rows="4" placeholder="Enter your address" ><%=address.address%></textarea>
                 </div>
     
                 <div class="form-group m-2  col-5">
                     <label for="district">District/City/Town:</label>
                      <input type="text" id="district" name="district" required class="form-control " placeholder="Enter District/City/Town" value="<%=address.district%>">
                 </div>
     
                 <div class="form-group m-2  col-5">
                     <label for="indianStates">State:</label>
                     <select id="indianStates" class="form-select" aria-label="Select Indian State" name="state" >
                        
                         <option selected disabled>Select State</option>
                         <% for (const state of ['Andhra Pradesh', 'Arunachal Pradesh', 'Assam', 'Bihar', 'Chhattisgarh', 'Goa', 'Gujarat', 'Haryana', 'Himachal Pradesh', 'Jharkhand', 'Karnataka', 'Kerala', 'Madhya Pradesh', 'Maharashtra', 'Manipur', 'Meghalaya', 'Mizoram', 'Nagaland', 'Odisha', 'Punjab', 'Rajasthan', 'Sikkim', 'Tamil Nadu', 'Telangana', 'Tripura', 'Uttar Pradesh', 'Uttarakhand', 'West Bengal']) { %>
                            <option value="<%= state %>" <%= address.state === state ? 'selected' : '' %>><%= state %></option>
                        <% } %>
                     </select>
                     
                 </div>
     
                 <div class="form-group m-3 mb-5 col-6">
                     <label for="Gender">Address type:</label>
                     <div class="container mt-2">
                         <input type="radio" id="home" name="type" value="home" <% if ( address.type === 'home') { %>checked<% } %> >
                         <label for="home">Home</label>
             
                         <input type="radio" id="work" name="type" value="work" <% if ( address.type === 'work') { %>checked<% } %> >
                         <label for="work">Work</label>
                     </div>
                 </div>
     
                 <div class="form-group text-start mb-3">
                     <button type="submit" id="save" class="btn  mt-2 col-2 text-white " style="background-color: #d2bdbd;">SAVE</button>
                    <button type="button"  id="Cancel"  class="btn btn-light mt-2 text-primary " >CANCEL</button>
                 </div>
     
     
               </div>
            </div>
          </form>
     


