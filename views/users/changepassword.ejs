    <a class="nav-link" href="/logout"><svg width="24" height="24" class="" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path fill="#2874F0" stroke-width="0.3" stroke="#2874F0" d="M13 3h-2v10h2V3zm4.83 2.17l-1.42 1.42C17.99 7.86 19 9.81 19 12c0 3.87-3.13 7-7 7s-7-3.13-7-7c0-2.19 1.01-4.14 2.58-5.42L6.17 5.17C4.23 6.82 3 9.26 3 12c0 4.97 4.03 9 9 9s9-4.03 9-9c0-2.74-1.23-5.18-3.17-6.83z"></path></svg> LOGOUT </a>
  </div>
  
  <div class="content">
    
    <div class="container">
        
        <form action="/changepassword" id="editaddressForm" method="post" class=" rounded  form-container mt-5" style="border: 1px solid #c6c6c6;">

            <H6 class="m-3  text-primary">CHANGE PASSWORD</H6>

            <% if (errors && errors.length > 0) { %>
              <div class="alert alert-danger">
                <ul>
                  <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                  <% }); %>
                </ul>
              </div>
            <% } %>

            <div class="text-warning m-3"><%= data %></div>
            <div class="form-group col-10">
              <label for="Password" class="mx-3"> Current Password:</label>
              <input type="password" id="Password" name="password"  required class="form-control mx-3">
            </div>
            <div class="form-group col-10 ">
              <label for="Password" class="mx-3">New Password:</label>
              <input type="password"  id="conformPassword" name="comformpassword"  required class="form-control mx-3">
            </div>
           
           
            <div class="form-group  mb-3 mx-4">
                <button type="submit" id="save" class="btn  mt-2 col-2 text-white " style="background-color: #d2bdbd;">SAVE</button>
              
            </div>
            <!-- <div class="col-md-3 mt-2">
              <a href="/" class="btn btn-danger ">LOGIN</a>
            </div> -->
          </form>

          

    </div>

    
    


    


  </div>
</div>
