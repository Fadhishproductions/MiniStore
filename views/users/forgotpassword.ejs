<%- include('partials/header')%>
 
  <div class="container m-5">
    <div class="row py-4">
    <div class="mid col-3 m-4 p-3 rounded mx-auto" style="background-color: #f4eff4;">
   
        <div class=" text-center">
            <label for="form" class="fw-bold text-dark">FORGOT PASSWORD</label>
        
        </div>
          
      
      <form id="forgotform" action="/forgotpassword" method="post" class="form-container mt-1" >
        <div class="form-group">
         <h6 id="errordis" class="text-warning"></h6>
        </div>
        <div class="form-group">
          <label for="Email">Email:</label>
          <input type="email" id="email" name="email" required class="form-control" value=" " placeholder="Enter your email" >
        </div>
    
        <div class="form-group text-center">
          <button type="submit" class="btn  mt-2">SUBMIT</button>
        </div>
        <!-- <div class="col-md-3 mt-2">
          <a href="/" class="btn btn-danger ">LOGIN</a>
        </div> -->
      </form>
    </div>
  </div></div>

  <!-- footer start -->
  <%- include('partials/footer')%>
<!-- footer end -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

  <script>
    $(document).ready(function() {
      $("#forgotform").submit(function(event) {
        // Prevent the default form submission behavior
        event.preventDefault();
  
        // Serialize the form data
        var formData = $(this).serialize();
  
        // Send the form data using Ajax
        $.ajax({
          type: "POST",
          url: "/forgotpassword", // Specify the URL to submit the form data
          data: formData, // Pass the serialized form data
          success: function(response) {
           if(response.success){
            alert(response.msg);
            window.location.href='/varifyforgotpassword'
           }
           else{
            $("#errordis").text(response.error)
           }
          },
          error: function(xhr, status, error) {
            // Handle errors
            console.error("Error:", error);
            // You can add further logic here, like displaying an error message
          }
        });
      });
    });
  </script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
