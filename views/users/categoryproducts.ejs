<%- include('partials/header')%>

<div class="container-fluid rounded  mt-5 " style="background-color: rgb(247, 247, 247);height: 7%;">
  <div class="row">
    <ul class="list-inline text-center my-auto">
      <li class="list-inline-item m-2">
        <a href="/allproducts" class="text-decoration-none fw-bold cat" style="font-family: inter_semi_bold,fallback-inter_semi_bold,Arial,sans-serif; font-size: 14px;display: flex;align-items: center;justify-content: center;">ALL PRODUCTS</a>
      </li>
      <% category.forEach((category, index) => { %>
      <li class="list-inline-item m-2 ">
        <a href="/categoryproducts?id=<%=category._id%>" class="text-decoration-none fw-bold cat" style="font-family: inter_semi_bold,fallback-inter_semi_bold,Arial,sans-serif; font-size: 14px;display: flex;align-items: center;justify-content: center;">
          <%=category.name%>
        </a>
      </li>
      <% }) %>
    </ul>
  </div>
  </div>
  <div class="container">
    <div class="row">
      <% if (product.length === 0) { %>
        <div class="col-12 text-center py-5">
          <h2 style="font-family: 'Garamond', serif; color: #6c757d;">No products available</h2>
          <p style="font-family: 'Courier New', Courier, monospace; font-size: 1.2rem; color: #6c757d;">
            We're sorry! Currently, there are no products to display. Please check back later.
          </p>
          <a href="/" class="btn btn-primary" style="padding: 10px 20px; border-radius: 5px; font-size: 1rem;">
            Go to Homepage
          </a>
        </div>
      <% } else { %>
        <% product.forEach((product) => { %>
          <div class="col-3 mb-2 m-2">
            <a href="singleproduct?id=<%=product._id%>" class="text-decoration-none text-dark">
              <img src="<%=product.img[0]%>" class="img-fluid" alt="product image" style="width: 60%;">
            </a>
          </div>
          <div class="col-8 pt-4 mb-2" style="min-height: 150px;">
            <a href="singleproduct?id=<%=product._id%>" class="text-decoration-none text-dark">
              <h4 style="font-family: 'Courier New', Courier, monospace;"><%= product.description %></h4>
              <h2 class="mt-3" style="font-family: Garamond, serif;">
                <% if (product.offer && product.offer !== null) { %>
                  <span class="text-success fs-small" style="font-size: x-large;"><%= product.isoffer %>% off</span>
                  <del class="text-secondary">₹<%= product.ogprice %></del>
                <% } %>
                ₹<%=product.price%>
              </h2>
            </a>
          </div>
          <div style="width: 100%; height: 1px; background-color: rgb(217, 211, 211); margin: 10px 0;"></div>
        <% }) %>
      <% } %>
    </div>
  </div>
  


    <!-- footer start -->
    <%- include('partials/footer')%>
<!-- footer end -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
