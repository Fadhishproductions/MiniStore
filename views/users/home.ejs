<%- include('partials/header')%>

<div class="container-fluid rounded  mt-5 " style="background-color: rgb(247, 247, 247);height: 7%;">
  <div class="row">
    <ul class=" list-inline text-center my-auto" >
      <li class="list-inline-item m-2 ">
        <a href="/allproducts" class=" text-decoration-none  fw-bold cat  " style="font-family: inter_semi_bold,fallback-inter_semi_bold,Arial,sans-serif; font-size: 14px;display: flex;align-items: center;justify-content: center;
      ">ALL PRODUCTS</a>
      </li>
      <% category.forEach((category, index) => { %>
        <li class="list-inline-item m-2 ">
          <a href="/categoryproducts?id=<%=category._id%>" class=" text-decoration-none  fw-bold cat  " style="font-family: inter_semi_bold,fallback-inter_semi_bold,Arial,sans-serif; font-size: 14px;display: flex;align-items: center;justify-content: center;
        "><%=category.name%></a>
        </li>
      <% }) %>
    </ul>
    
  </div>
</div>
<div class="mt-1">
  <div id="carouselExampleIndicators" class="carousel slide " data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="https://rukminim1.flixcart.com/fk-p-flap/1600/270/image/850993b3fd3b450f.jpg?q=20" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://rukminim1.flixcart.com/fk-p-flap/1600/270/image/4f9ffd5f11a2a4b9.jpg?q=20" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://rukminim1.flixcart.com/fk-p-flap/1600/270/image/4f9ffd5f11a2a4b9.jpg?q=20" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<div class="container"><div class="row">



  <div class="container">
    <div class="row m-2">
      <% product.forEach((product) => { %> 
        <div class="col-6 col-md-4 mb-2">
          <div class="card my-3" 
               style="border: none; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease, box-shadow 0.3s ease; height: 100%; overflow: hidden;">
            <a href="singleproduct?id=<%=product._id%>" class="text-decoration-none text-dark">
              <img src="<%=product.img[0]%>" class="img-fluid" alt="product image" 
                   style="width: 100%; border-radius: 10px 10px 0 0; height: 200px; object-fit: cover; transition: transform 0.3s ease;">
            </a>
            <div class="card-body" style="padding: 16px; text-align: center;">
              <a href="singleproduct?id=<%=product._id%>" class="text-decoration-none text-dark">
                <h6 class="fw-bold" style="margin: 8px 0; min-height: 40px;"><%=product.name%></h6>
                <h6 style="margin: 8px 0;">
                  <% if (product.offer && product.offer !== null) { %>
                    <span class="text-success" style="font-size: smaller; font-weight: bold;"><%= product.isoffer %>% off</span>
                    <del class="text-secondary" style="font-size: 0.9rem;">₹<%= product.ogprice %></del>
                  <% } %>
                  ₹<%=product.price%>
                </h6>
                <% if(product.stock <= 10 && product.stock != 0) { %>
                  <h6 class="text-warning" style="margin: 8px 0;">only <%=product.stock%> left</h6>
                <% } %>
                <% if(product.stock == 0) { %> 
                  <h6 class="text-danger" style="margin: 8px 0;">Out of stock</h6>
                <% } %>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  
  
</div></div>
    <!-- footer start -->
    <%- include('partials/footer')%>
<!-- footer end -->


